    "@types/chai": "^4.3.11",
    "@types/chrome": "^0.0.263",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "autoprefixer": "10.3.4",
    "babel-loader": "8.2.2",
    "chai": "^5.0.0",
    "concurrently": "6.2.1",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.2.0",
    "dotenv": "^16.3.1",
    "eslint": "7.32.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "4.0.0",
    "file-loader": "6.2.0",
