    "ncp": "^2.0.0",
    "postcss": "8.3.6",
    "postcss-loader": "6.1.1",
    "resolve-url-loader": "4.0.0",
    "sass": "^1.49.9",
    "sass-loader": "12.1.0",
    "sinon": "^17.0.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-order": "4.1.0",
    "svg-sprite-loader": "6.0.9",
    "svgo": "2.5.0",
    "svgo-loader": "3.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "twig": "^1.16.0",
    "webpack": "^5.90.3",
    "webpack-cli": "4.8.0",
    "zip-a-folder": "^3.1.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint ./styleguide --ext .js"
