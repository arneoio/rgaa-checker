{
  "manifest_version": 3,
  "name": "Arneo RGAA Checker",
  "description": "RGAA Checker by Arneo",
  "version": "0.0.0",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/panel.html",
        "app.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
